<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.active4j.hr.topic.dao.OaTopicMapper">


    <select id="findTopicList" resultType="com.active4j.hr.topic.entity.OaTopic"></select>

    <select id="getDBCount" resultType="java.lang.Integer">
        SELECT DISTINCT
        count(*)
        FROM
        wf_base b,
        act_ru_execution e,
        act_ru_task t
        WHERE
        b.ID = e.BUSINESS_KEY_
        AND e.PROC_INST_ID_ = t.PROC_INST_ID_
        AND t.ASSIGNEE_ =  #{userName}
        order by b.APPLY_DATE desc
    </select>

    <select id="getDeptName" resultType="String">
        SELECT
            a.NAME
        from
            sys_depart a
        left join sys_depart b on a.id = b.parent_id
        where
            b.id =#{disciplineOfficeId}
    </select>
    <select id="getUserMessage" resultType="com.active4j.hr.system.entity.SysUserEntity">
        select
            *
        from sys_user
        where real_name =#{username}
    </select>

</mapper>
